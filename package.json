{
  "name": "chirashi-slider",
  "version": "3.1.0",
  "description": "Pure logic slider.",
  "keywords": [
    "slider",
    "carousel",
    "events"
  ],
  "main": "./dist/chirashi-slider.common.js",
  "module": "./dist/chirashi-slider.mjs",
  "jsnext:main": "./dist/chirashi-slider.mjs",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "NODE_ENV=production node build/build.js && npm run build:flow",
    "build:flow": "flow gen-flow-files ./lib/index.js --out-dir=./dist",
    "dev:test": "npm run test:unit -- --watchAll",
    "test:unit": "NODE_ENV=test jest",
    "test:cover": "npm run test:unit -- --coverage",
    "test": "npm run lint && npm run flow && npm run test:cover",
    "analyze": "bash build/analyze.sh",
    "lint": "eslint ./lib ./test",
    "flow": "flow check",
    "docs": "documentation build ./lib -f md -o docs/index.md --github",
    "release": "bash build/release.sh"
  },
  "homepage": "https://chirashi.js.org",
  "author": {
    "name": "Alex Toudic",
    "mail": "alex@chirashijs.org",
    "url": "https://alextoudic.xyz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chirashijs/chirashi-slider.git"
  },
  "bugs": {
    "url": "https://github.com/chirashijs/chirashi-slider/issues"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babelrc-rollup": "^3.0.0",
    "documentation": "^5.1.1",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.52.0",
    "gzip-size": "^3.0.0",
    "jest": "^20.0.4",
    "mkdirp": "^0.5.1",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-local-resolve": "^1.0.7",
    "uglify-js": "^3.0.27"
  },
  "dependencies": {
    "chirashi-event-emitter": "^2.0.3"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
